<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44.55dp"
    android:background="@color/white">


    <View
        android:id="@+id/call_bg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/photo_contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"

        app:layout_constraintBottom_toBottomOf="@id/call_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/call_bg" />

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/photo_contact"
        app:layout_constraintTop_toTopOf="@id/call_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/number_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер телефона"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/photo_contact"
        app:layout_constraintBottom_toBottomOf="@id/call_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>